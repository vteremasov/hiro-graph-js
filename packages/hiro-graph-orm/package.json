{
    "name": "hiro-graph-orm",
    "version": "1.0.4",
    "description": "OGIT ontology to sane application mappings",
    "repository": "arago/hiro-graph-js",
    "main": "lib/index.js",
    "scripts": {
        "build": "rm -rf lib/* && BABEL_ENV=production babel src --out-dir lib --source-maps",
        "prepublish": "yarn build",
        "test": "jest --silent"
    },
    "types": "typings.d.ts",
    "license": "MIT",
    "dependencies": {
        "hiro-graph-client": "^1.0.1",
        "hiro-graph-codecs": "^1.0.0",
        "hiro-graph-gremlin": "^1.0.1",
        "hiro-graph-lucene": "^1.0.0",
        "lodash.isplainobject": "^4.0.6"
    },
    "devDependencies": {
        "babel-cli": "^6.6.5",
        "babel-jest": "^23.4.2",
        "babel-preset-hiro": "^0.4.0",
        "jest": "^23.5.0"
    },
    "babel": {
        "presets": [
            [
                "hiro",
                {
                    "library": true
                }
            ]
        ]
    },
    "jest": {
        "testPathIgnorePatterns": [
            "<rootDir>[/\\\\](lib|node_modules)[/\\\\]"
        ],
        "testEnvironment": "node",
        "testURL": "http://localhost",
        "transform": {
            "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest"
        }
    }
}
